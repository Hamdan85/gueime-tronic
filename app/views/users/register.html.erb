    <div class="form-vertical register-form" >
      <%= form_for(@user) do |f| %>
      <h3 class="">Registre-se</h3>
      <p>Digite seus dados:</p>
      <div class="control-group">
        <%= f.label :username, class: "control-label visible-ie8 visible-ie9" %>
        <div class="controls">
          <div class="input-icon left">
            <i class="icon-user"></i>
            <%= f.text_field :username, class: "m-wrap placeholder-no-fix", :placeholder => "apelido" %>
          </div>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :name, class: "control-label visible-ie8 visible-ie9" %>
        <div class="controls">
          <div class="input-icon left">
            <i class="icon-user"></i>
            <%= f.text_field :name, class: "m-wrap placeholder-no-fix", :placeholder => "usuÃ¡rio" %>
          </div>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :password, class: "control-label visible-ie8 visible-ie9" %>
        <div class="controls">
          <div class="input-icon left">
            <i class="icon-lock"></i>
            <%= f.password_field :password, class: "m-wrap placeholder-no-fix", :placeholder => "senha" %>
          </div>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :password_confirmation, class: "control-label visible-ie8 visible-ie9" %>
        <div class="controls">
          <div class="input-icon left">
            <i class="icon-ok"></i>
            <%= f.password_field :password_confirmation, class: "m-wrap placeholder-no-fix", :placeholder => "confirme sua senha" %>
          </div>
        </div>
      </div>
      <div class="control-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <%= f.label :email, class: "control-label visible-ie8 visible-ie9" %>
        <div class="controls">
          <div class="input-icon left">
            <i class="icon-envelope"></i>
            <%= f.text_field :email, class: "m-wrap placeholder-no-fix", :placeholder => "e-mail" %>
          </div>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <label class="checkbox">
          <input type="checkbox" name="tnc"/> I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
          </label>  
          <div id="register_tnc_error"></div>
        </div>
      </div>
      <div class="form-actions">
        <button id="register-back-btn" type="button" class="btn">
        <i class="m-icon-swapleft"></i>  Back
        </button>
        <%= f.submit "Registrar", class: "btn green pull-right" %>
      </div>
    <% end %>
    </div>